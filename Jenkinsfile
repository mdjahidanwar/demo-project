pipeline {
  
  agent any
  
  stages {
    
    stage("build") {
      
      steps {
        
        echo "building the application ................................#####*****"
      
      
      }
      
    }
    
    stage("test") {
      
      steps {
        
        echo "testing the application..... "
        echo "new test"
      
     
      }
    
    }
    
    stage("release") {
      
      steps {
        echo "releasing the application..... "
      
      }
    
    }
  
  
  }

}
